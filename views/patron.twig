<html>
<head>
  <title>Library Database</title>
  <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
</head>
<body>
  <div class='container'>
    <h1>{{ patron.getName }}</h1>

    {% if books is not empty %}
      <p>Here are the Books this Patron has checked out:</p>
      <ul>
        {% for book in books %}
          <li>{{ book.getAuthor }} : {{ book.getTitle }}</li>
        {% endfor %}
      </ul>
    {% endif %}

    <h4>Add a Book to this Patron's checkout history:</h4>

    <form action='/add_books' method='post'>
      <input id='patron_id' name='patron_id' type='hidden' value='{{ patron.getId }}'>

      <label for='book_id'>Select a Book</label>
      <select id='book_id' name='book_id' type='text'>
        {% for book in all_books %}
          <option value='{{ book.getId }}'>{{ book.getTitle }}</option>
        {% endfor %}
      </select>
      <button type='submit'>Add Book</button>
    </form>
    <p><a href='/patrons/{{ patron.getId }}/edit'>Edit this Patron</a></p>
    <p><a href='/'>Home</a></p>
  </div>
</body>
</html>
